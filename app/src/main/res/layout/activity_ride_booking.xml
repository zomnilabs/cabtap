<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ride_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alleoindong.cabtap.user.RideBookingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:text="@string/booking_details"
            android:layout_marginBottom="@dimen/description_margin"
            android:textAppearance="@style/TextAppearance.FontPath"
            android:textColor="@color/colorBlack" />

        <EditText
            android:theme="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:ems="10"
            android:id="@+id/pickup_point"
            android:hint="@string/pickup_point"
            android:textAppearance="@style/TextAppearance.FontPath" />

        <EditText
            android:theme="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:ems="10"
            android:id="@+id/destination"
            android:hint="@string/destination"
            android:textAppearance="@style/TextAppearance.FontPath" />

        <EditText
            android:theme="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:ems="10"
            android:id="@+id/pickup_date"
            android:hint="@string/pickup_date"
            android:textAppearance="@style/TextAppearance.FontPath" />

        <EditText
            android:theme="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:ems="10"
            android:id="@+id/pickup_time"
            android:hint="@string/pickup_time"
            android:textAppearance="@style/TextAppearance.FontPath" />

        <EditText
            android:theme="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:ems="10"
            android:id="@+id/estimate_fare_rate"
            android:hint="@string/estimate_fare_rate"
            android:textAppearance="@style/TextAppearance.FontPath" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp">

            <Button
                android:id="@+id/btn_book_now"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:theme="@style/PrimaryButton"
                android:textSize="@dimen/text_size"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="@dimen/btn_height"
                android:text="@string/book_now" />

            <ProgressBar
                android:id="@+id/btn_book_now_loading"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
