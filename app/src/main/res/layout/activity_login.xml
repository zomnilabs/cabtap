<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alleoindong.cabtap.com.alleoindong.cabtap.LoginActivity"
    android:background="@drawable/backrepeat"
    android:weightSum="1">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo"
        android:layout_weight="0.57" />

    <TextView
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="@string/app_tag_description"
        android:layout_marginBottom="@dimen/description_margin"
        android:textAppearance="@style/TextAppearance.FontPath" />
    
    <Button
        android:id="@+id/btn_login"
        android:theme="@style/PrimaryButton"
        android:textSize="@dimen/text_size"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:layout_height="70dp"
        android:text="@string/log_in"/>

    <Button
        android:id="@+id/btn_register"
        android:theme="@style/DangerButton"
        android:textSize="@dimen/text_size"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:text="@string/register_now"/>

</LinearLayout>
