<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_how_to_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backrepeat"
    tools:context="com.example.alleoindong.cabtap.user.HowToBookActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/how_to_book_1"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorGray"
            android:textAppearance="@style/TextAppearance.FontPath" />

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/how_to_book_2"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorGray"
            android:textAppearance="@style/TextAppearance.FontPath" />

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/how_to_book_3"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorGray"
            android:textAppearance="@style/TextAppearance.FontPath" />

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/how_to_book_4"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorGray"
            android:textAppearance="@style/TextAppearance.FontPath" />

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/how_to_book_5"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorGray"
            android:textAppearance="@style/TextAppearance.FontPath" />

    </LinearLayout>


</RelativeLayout>
