<resources>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreenSecond" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_second_background</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/courier.ttf</item>
    </style>

    <style name="AppTheme.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">?android:attr/colorBackground</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">?android:attr/colorBackground</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">?android:attr/colorBackground</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="actionMenuTextColor">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomButtons" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="PrimaryButton" parent="CustomButtons">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="DangerButton" parent="CustomButtons">
        <item name="colorControlHighlight">@color/colorDarkAccent</item>
        <item name="colorButtonNormal">@color/colorOrange</item>
    </style>

    <style name="IconButtonsWhite" parent="CustomButtons">
        <item name="colorControlHighlight">@color/colorDarkAccent</item>
        <item name="colorButtonNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

</resources>
